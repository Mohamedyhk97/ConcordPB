<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/babyBlue"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/babyBlue"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:elevation="1dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp"
                app:cardMaxElevation="1dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/empName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-light"
                        android:text="Name : khaled Hanafy"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/empTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-light"
                        android:text="Title : IT Director"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/empDep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Department : IT"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/empBuliding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Buliding : B - 1"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/empFloor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-light"
                        android:text="Floor : F - 0"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/empExtsion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-light"
                        android:text="Extension Number : 500"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/empMobileNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-light"
                        android:text="Mobile Number :0101010010"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/empEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-light"
                        android:text="E - Mail : itsc@concord-acc.com"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_button"
                            android:backgroundTint="#58b368"
                            android:fontFamily="sans-serif-light"
                            android:text="Call"
                            android:textSize="19dp"
                            android:textAllCaps="false"
                            android:textColor="@color/white"></Button>

                        <Button
                            android:id="@+id/btn_sendMail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="40dp"
                            android:layout_weight="1"
                            android:textSize="19dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/rounded_button"
                            android:backgroundTint="#af0404"
                            android:fontFamily="sans-serif-light"
                            android:text="Send Mail"
                            android:textAllCaps="false"
                            android:textColor="@color/white"></Button>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
